{
    "path": "/updateOrderInfo",
    "methods": {
        "post": {
            "operationId": "updateOrderInfo",
            "tags": [
                "Entregas"
            ],
            "summary": "Atualizar Informações da Entrega",
            "description": "Permite atualizar informações específicas de uma entrega, como dados de origem, código do pedido e informações de destino (nome, telefone e observações).",
            "parameters": [
                {
                    "$ref": "#/components/parameters/live_mode"
                },
                {
                    "$ref": "#/components/parameters/customer"
                }
            ],
            "requestBody": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "required": [
                                "logistic_order_tracking",
                                "logistic_subclient_publicID"
                            ],
                            "properties": {
                                "logistic_order_tracking": {
                                    "description": "Código de rastreamento da entrega",
                                    "type": "string",
                                    "example": "ABC123DEF456"
                                },
                                "logistic_subclient_publicID": {
                                    "description": "ID público do subcliente",
                                    "type": "string",
                                    "example": "subclient_123"
                                },
                                "specifications": {
                                    "type": "object",
                                    "description": "Especificações da entrega que podem ser atualizadas",
                                    "properties": {
                                        "orderId": {
                                            "description": "Código do pedido",
                                            "type": "string",
                                            "example": "ORDER_001"
                                        },
                                        "origin": {
                                            "description": "Origem do pedido",
                                            "type": "string",
                                            "example": "E-commerce"
                                        }
                                    }
                                },
                                "addresses": {
                                    "type": "object",
                                    "description": "Informações de endereço para atualização",
                                    "properties": {
                                        "dropoff": {
                                            "type": "object",
                                            "description": "Informações do local de entrega",
                                            "properties": {
                                                "name": {
                                                    "description": "Nome do destinatário",
                                                    "type": "string",
                                                    "example": "João Silva"
                                                },
                                                "phone": {
                                                    "description": "Telefone do destinatário",
                                                    "type": "string",
                                                    "example": "(11) 99999-9999"
                                                },
                                                "obs": {
                                                    "description": "Observações adicionais para o destino",
                                                    "type": "string",
                                                    "example": "Entregar após às 14h"
                                                }
                                            }
                                        }
                                    }
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            },
            "responses": {
                "200": {
                    "description": "Entrega atualizada com sucesso",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "success": {
                                        "type": "integer",
                                        "description": "Código de status da resposta. 1 = Sucesso, 0 = Erro",
                                        "example": 1
                                    },
                                    "message": {
                                        "type": "string",
                                        "description": "Mensagem de retorno da solicitação",
                                        "example": "Informações da entrega atualizadas com sucesso"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "400": {
                    "description": "Erro na requisição",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "success": {
                                        "type": "integer",
                                        "description": "Código de erro",
                                        "example": 0
                                    },
                                    "message": {
                                        "type": "string",
                                        "description": "Mensagem de erro detalhada",
                                        "example": "O campo logistic_order_tracking é obrigatório"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "401": {
                    "$ref": "#/components/responses/401"
                },
                "404": {
                    "description": "Entrega não encontrada",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "success": {
                                        "type": "integer",
                                        "description": "Código de erro",
                                        "example": 0
                                    },
                                    "message": {
                                        "type": "string",
                                        "description": "Mensagem de erro",
                                        "example": "Entrega não encontrada ou não pertence a este subcliente"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "405": {
                    "$ref": "#/components/responses/405"
                }
            },
            "security": [
                {
                    "TokenQuery": []
                }
            ]
        }
    }
}
